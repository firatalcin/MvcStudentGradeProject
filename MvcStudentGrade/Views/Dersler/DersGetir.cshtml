@model MvcStudentGrade.Models.EntityFramework.TBLDERSLER
@{
    ViewBag.Title = "DersGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("DersGuncelle", "Dersler", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.DERSAD)
        @Html.TextBoxFor(m=> m.DERSAD, new { @class="form-control" })
    </div>
    @Html.HiddenFor(m=>m.DERSID)
    <br />
    <div>
        <button class="btn btn-info">Güncelle</button>
    </div>
}

